<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= feed_item.content %></span>
    
    <% if feed_item.image? %>
      <div class="image">
         <%= image_tag feed_item.image.url(:medium) %>
      </div>
    <% end %>
    
    <!--ここにfavoriteのリンクになるように書く-->
    <% if false %>
      <%= link_to 'Favorite', { controller: :favorites, action: :create }, :micropost_id => feed_item.id, :user_id =>current_user.id %>
    <% end %>
    
    <!--<= if @favoritemicopost %>-->
      <%= link_to 'Favorite',favorites_path(:micropost_id => feed_item.id, :user_id =>current_user.id, id: current_user.id), method: :post %>
      
    <!--< else %>-->
    <!--  <= link_to 'Unfavorite',unfavorites_path(:micropost_id => feed_item.id, :user_id =>current_user.id), method: :post %>-->
    <!--< end %>-->
      
  
    
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
  <% if current_user == feed_item.user %>
    <%= link_to "delete", feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: feed_item.content %>
  <% end %>
  
</li>